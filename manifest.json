{
    "manifest_version": 3,
    "name": "Motivational Quote",
    "version": "1.0",
    "description": "Get famous motivational phrases",
    "icons": {
        "128": "icon128.png"
    },
    "content_scripts": [
        {
          "js": ["script.js"],
          "matches": [
            "https://developer.chrome.com/docs/extensions/*",
            "https://developer.chrome.com/docs/webstore/*"
          ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}